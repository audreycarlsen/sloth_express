<h1>Sloth Marketplace</h1>

<% if current_user %>
  <%= link_to 'Create New Product', new_product_path %>
<% end %>
<br><br>

  <% @products.each do |product| %>
  <div class="product">
     <% if product.photo == "" %>
       <%= link_to image_tag("/assets/sloth_default.png", size: '150x150'), product %> 
     <% else %>
       <%= link_to image_tag(product.photo, size: '150x150'), product %> 
     <% end %>
  <div class="product_description">
    <div class="title">
            <%= link_to product.name, product %>
          </div>
          <%= number_to_currency(product.price) %>
          <br>
          <% unless session[:user_id] && session[:user_id] == product.user_id %>
            <%= button_to "Add to Cart", order_items_path(:product_id => product.id)%>
          <% end %>
          <div id="edit_destroy"> 
              <% if session[:user_id] == product.user_id %>          
              [<%= link_to 'Edit', edit_product_path(product) %>] 
              [<%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %>]
            <% end %>
          </div>
    </div>
  </div>
   <% end %>



   
 

